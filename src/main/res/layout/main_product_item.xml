<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="8dp"
    android:background="@color/main_product_grey"
    android:elevation="16dp">

    <ImageView

        android:id="@+id/main_product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/main_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_product_image"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:maxLength="12"
        android:padding="8dp"
        android:text="Product Name"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/main_product_ratingbar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_product_name"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:padding="1dp"
        android:progressBackgroundTint="@color/normal_white"
        android:progressTint="@color/foreground_yellow_dark"
        android:rating="3.5"
        android:secondaryProgressTint="@color/normal_white"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/main_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_product_ratingbar"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="3dp"
        android:text="$500.00"
        android:textColor="@color/price_red"
        android:textSize="@dimen/main_item_price_size" />

    <TextView
        android:id="@+id/main_product_sec_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/main_product_ratingbar"
        android:layout_toRightOf="@id/main_product_price"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:text="$400"
        android:textColor="@color/sec_color_grey"
        android:textSize="@dimen/main_item_price_size" />

</RelativeLayout>
